{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title" : "Schools per 100,000 People",
  "width": "container",
  "params": [{"name": "state_select", "value": "Malaysia"}],
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/master/public/data/malaysia-states.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "properties.Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/koohyejin0127/FIT3179_A2/refs/heads/main/data/school_dist.csv",
          "format": {"type": "csv"}
        },
        "key": "state",
        "fields": ["date", "schools_per_100k", "total_population", "total_schools"]
      }
    },
    {"filter": "datum.date == '1/1/2022'"}
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "schools_per_100k",
          "type": "quantitative",
          "title": "Schools per 100,000 People",
          "scale": {
            "domainMid": 33.6,
            "range": ["#b2182b", "#c6c6c6", "#17416c"]
          },
          "legend": {"orient": "bottom-right", "direction": "horizontal"}
        },
        "opacity": {
          "condition": {
            "test": "state_select == 'Malaysia' || datum.properties.Name == state_select",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "properties.Name", "title": "State"},
          {"field": "schools_per_100k", "title": "Schools per 100k"},
          {"field": "total_schools", "title": "Total Schools"},
          {"field": "total_population", "title": "Total Population"}
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.Name == state_select && state_select != 'Malaysia'"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 2.5,
        "fill": null
      }
    }
  ],
  "config": {}
}
