{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Schools and Student Enrolment Over Time",
  "data": {
    "url": "https://raw.githubusercontent.com/koohyejin0127/FIT3179_A2/refs/heads/main/data/school_enrol.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "stage_select",
      "value": "all_levels",
      "bind": {
        "input": "select",
        "options": ["all_levels", "primary", "secondary", "tertiary"],
        "labels": ["All Levels", "Primary", "Secondary", "Tertiary"],
        "name": "Select Education Level: "
      }
    }
  ],
  "transform": [
    {"calculate": "toDate(datum.date)", "as": "parsed_date"},
    {"calculate": "toNumber(datum.students)", "as": "students_num"},
    {"calculate": "toNumber(datum.schools)", "as": "schools_num"},
    {"filter": "stage_select == 'all_levels' || datum.stage == stage_select"},
    {"timeUnit": "year", "field": "parsed_date", "as": "year"},
    {
      "aggregate": [
        {"op": "mean", "field": "schools_num", "as": "avg_schools"},
        {"op": "mean", "field": "students_num", "as": "avg_students"}
      ],
      "groupby": ["year"]
    },
    {"fold": [
      {"field": "avg_schools", "as": "Schools"},
      {"field": "avg_students", "as": "Students"}],
      "as": ["Type", "Value"]
    }
  ],
  "facet": {
    "row": {
      "field": "Type",
      "title": null
    }
  },
  "spec": {
    "height": 150,
    "width": 800,
    "mark": {"type": "line", "point": true},
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal",
        "axis": {
          "title": "Year", 
          "format": "%Y", 
          "tickCount": {"interval": "year", "step": 1}}
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "axis": {"title": "Average Count"},
        "scale": {"zero": false}
      },
      "color": {
        "field": "Type",
        "type": "nominal",
        "scale": {"range": ["#15579e", "#5d8ec2"]},
        "legend": null
      },
      "tooltip": [
        {"field": "year", "type": "temporal", "title": "Year", "format": "%Y"},
        {"field": "Type", "title": "Category"},
        {"field": "Value", "title": "Average Count", "format": ",.0f"}
      ]
    }
  },
  "resolve": {
    "scale": {
      "y": "independent",
      "x": "shared"}},
  "config": {
    "axis": {"grid": false},
    "facet": {"spacing": 20},
    "title": {"fontSize": 16, "fontWeight": "bold"}
  }
}
