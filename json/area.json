{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Enrolment by Education Level",
  "data": {
    "url": "https://raw.githubusercontent.com/koohyejin0127/FIT3179_A2/refs/heads/main/data/school_enrol.csv"
  },
  "transform": [
    {"filter": "datum.date == '1/1/2022'"},
    {"filter": "datum.state != 'Malaysia'"},
    {"calculate": "datum.stage == 'primary' ? 1 : datum.stage == 'secondary' ? 2 : 3", "as": "xpos"},
    {"calculate": "datum.stage == 'primary' ? 'Primary' : datum.stage == 'secondary' ? 'Secondary' : 'Tertiary'", "as": "edu_labels"},
    {"calculate": "toNumber(datum.students)", "as": "students_num"},
    {
      "aggregate": [{"op": "sum", "field": "students_num", "as": "total_students"}],
      "groupby": ["edu_labels", "xpos"]
    }
  ],
  "mark": {"type": "area", "line": {"color": "black"}, "point":"transparent"},
  "encoding": {
    "x": {
      "field": "xpos",
      "type": "quantitative",
      "title": "Education Level",
      "axis": {
        "values": [1, 2, 3],
        "labelExpr": "datum.value == 1 ? 'Primary' : datum.value == 2 ? 'Secondary' : 'Tertiary'",
        "labelAngle": 0
      }
    },
    "y": {
      "field": "total_students",
      "type": "quantitative",
      "title": "Number of Students"
    },
    "color": {
      "value": "#7a5195"
    },
    "tooltip": [
      {"field": "edu_labels", "title": "Education Level"},
      {"field": "total_students", "title": "Total Students"}
    ]
  },
  "width": 800,
  "height": 400,
  "config": {"axis": {"grid": false}}
}
